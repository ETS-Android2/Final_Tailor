<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_edit_text_setting">

        <item name="android:maxLength">40</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:background">@drawable/selector_default_edit_text</item>
        <item name="android:padding">@dimen/stander_margin</item>
        <item name="android:layout_marginBottom">@dimen/stander_margin</item>
    </style>

    <style name="default_radio_setting">
        <item name="android:layout_marginRight">@dimen/stander_margin_x4</item>
        <item name="android:layout_marginLeft">@dimen/stander_margin_x4</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:layout_marginBottom">@dimen/stander_margin</item>
    </style>

    <style name="default_text_view_setting">
        <item name="android:layout_marginRight">@dimen/stander_margin_x3</item>
        <item name="android:layout_marginLeft">@dimen/stander_margin_x3</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_marginBottom">@dimen/stander_margin</item>
        <item name="android:textStyle">bold</item>

        android:textStyle
    </style>




</resources>
